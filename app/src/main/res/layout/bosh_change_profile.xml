<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bosh"
        >

        <ImageView
            android:id="@+id/ivChangeProfNotch"
            android:layout_width="197dp"
            android:layout_height="85dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_maximize" />

        <EditText
            android:id="@+id/etChangeProfUsername"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edit_shape"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="@string/changeProf_et_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivChangeProfNotch" />

        <EditText
            android:id="@+id/etChangeProfPhone"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_shape"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:text="@string/changeProf_et_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etChangeProfUsername" />

        <Button
            android:id="@+id/btnChangeProfConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button_background"
            android:text="@string/changeProf_btn_edit"
            app:backgroundTint="@color/teal_700"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etChangeProfPhone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>